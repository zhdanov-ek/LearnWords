<?xml version="1.0" encoding="utf-8"?>
<resources>
    <color name="bg_white">#FFFFFF</color>

    <style name="ThemeLearnWordsLight" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColor">#000000</item>
<!-- Не применяется сюдой layout_margin.
       <item name="buttonStyle">@style/LearnWordsButtonGrey</item> -->
    </style>

    <style name="ButtonBase" parent="@android:style/Widget.Button.Small">
        <item name="android:layout_width">@dimen/button_width</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/font_size_middle</item>
        <item name="android:padding">@dimen/button_padding</item>
        <item name="android:layout_margin">@dimen/button_layout_margin</item>
    </style>

    <style name="ButtonBlue" parent="ButtonBase">
        <item name="android:background">@drawable/bg_button_blue</item>
        <item name="android:textColor">@color/colorTextLight</item>
    </style>

    <style name="ButtonGreen" parent="ButtonBase">
        <item name="android:background">@drawable/bg_button_green</item>
        <item name="android:textColor">@color/colorTextLight</item>
    </style>

    <style name="ButtonGrey" parent="ButtonBase">
        <item name="android:background">@drawable/bg_button_grey</item>
        <item name="android:textColor">@color/colorTextDark</item>
    </style>

    <style name="ButtonRed" parent="ButtonBase">
        <item name="android:background">@drawable/bg_button_red</item>
        <item name="android:textColor">@color/colorTextLight</item>
    </style>

    <style name="ButtonOrange" parent="ButtonBase">
        <item name="android:background">@drawable/bg_button_orange</item>
        <item name="android:textColor">@color/colorTextLight</item>
    </style>


    <!--  -->
    <style name="MyLayout">
        <item name="android:background">@drawable/bg_layout</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_margin">@dimen/ll_layout_margin</item>
        <item name="android:padding">@dimen/ll_padding</item>
    </style>

    <style name="TextCaption">
        <item name="android:textSize">36sp</item>
        <item name="android:textStyle">normal|bold</item>
    </style>



</resources>