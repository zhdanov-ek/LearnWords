<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.gek.learnwords.activity.MainActivity">

    <!-- Размещаем тулбар, который наполним уже в коде с помощью отдельного шаблона  -->
    <include layout="@layout/toolbar"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/ll_padding">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:src="@drawable/logo"/>

        <TextView
            android:id="@+id/tv_number_words"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:textSize="@dimen/font_size_small"
            android:textColor="@color/colorLogoBook"
            tools:text="In dictionary 20 words" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal|center_vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal|center_vertical">
            <Button
                android:id="@+id/btnInput"
                style="@style/ButtonOrange"
                android:layout_width="@dimen/button_menu_width"
                android:layout_height="@dimen/button_menu_height"
                android:layout_margin="@dimen/button_layout_margin"
                android:text="Test" />

            <Button
                android:id="@+id/btnVariant"
                style="@style/ButtonOrange"
                android:layout_width="@dimen/button_menu_width"
                android:layout_height="@dimen/button_menu_height"
                android:layout_margin="@dimen/button_layout_margin"
                android:text="Learn" />
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal|center_vertical">
            <Button
                android:id="@+id/btnWords"
                style="@style/ButtonOrange"
                android:layout_width="@dimen/button_menu_width"
                android:layout_height="@dimen/button_menu_height"
                android:layout_margin="@dimen/button_layout_margin"
                android:text="Words" />
            <Button
                android:id="@+id/btnAddWord"
                style="@style/ButtonOrange"
                android:layout_width="@dimen/button_menu_width"
                android:layout_height="@dimen/button_menu_height"
                android:layout_margin="@dimen/button_layout_margin"
                android:text="Add word" />
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal|center_vertical">
            <Button
                android:id="@+id/btnImportExport"
                style="@style/ButtonOrange"
                android:layout_width="@dimen/button_menu_width"
                android:layout_height="@dimen/button_menu_height"
                android:layout_margin="@dimen/button_layout_margin"
                android:text="Import/Export"/>
            <Button
                android:id="@+id/btnSettings"
                style="@style/ButtonOrange"
                android:layout_width="@dimen/button_menu_width"
                android:layout_height="@dimen/button_menu_height"
                android:layout_margin="@dimen/button_layout_margin"
                android:text="Settings"/>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>
